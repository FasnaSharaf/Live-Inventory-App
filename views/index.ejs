<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="styles.css">
    <title>Retailer | reg</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!--Delete icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <!--Edit icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>

<body class="p-3 m-0 border-0 bd-example bd-example-row" style="background-color: #2F2F2F;">

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" id="reg" href="#">DevDeck</a>
            <div class="d-flex" id="reg">
                Retailer Registration
            </div>
        </div>
    </nav>

    <form action="/" method="post">
    <div class="container text-center">
        <div class="row" id="row_1">
            <div class="col" id="first_row">
                <p class="text-end">Add details</p>
            </div>
        </div>
        <div class="row" id="row_1">
            <div class="row">
                <div class="col col-8" id="names">
                    <p class="text-end">Item</p>
                </div>
                <div class="col" id="names">
                    <p class="text-end">Quantity</p>
                </div>
            </div>
            <div class="row">
                <div class="col col-8" id="input_box">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="shop_items">
                </div>
                <div class="col" id="input_box">
                    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="item_quantity">
                </div>
            </div>
        </div>
        <div class="row" id="row_1">
            <div class="col"><button id="but" class="btn">Submit</button></div>
        </div>
    </div>
</form>


<% if (List.length === 0 ){ %>
 
    <h1>No retailers yet.....</h1>
 
    
    <% } else { %>
 
     <div class="row mt-5 ">
     <%  List.forEach(retailers =>{   %>
       
      
 

        <div class="col-sm-6 col-md-4" style="display : flex; justify-content: center; align-items: center;">
            <div class="card text-white bg-dark mb-3" style="min-width: 25rem;">
                <div class="card-header">Item name : <%= retailers.item %></div>
                <div class="card-body">
                  <h5 class="card-title"></h5>
                   <p class="card-text">quantity : <%= retailers.quanity %></p>
                 </div>
               </div>
               <i class="fa fa-trash-o" style="font-size:24px;color:white; position:relative; top:2vh; right:3vw; cursor: pointer;"></i>
               <i class="fa fa-edit" style="font-size:24px;color:white; position:relative; top:2.3vh; right:7vw; cursor: pointer;"></i>
         </div>


    
      <% }) %>
 
     </div>
      
   <% } %>
 
   
 
     

</div>











<script src="index.js"></script>
</body>

</html>